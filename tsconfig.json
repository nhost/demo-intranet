{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"jsx": "react-jsx",
		"allowJs": true,
		"strict": true,

		// Bundler mode
		"moduleResolution": "bundler",
		"module": "preserve",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,

		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["nhost/emails/generator", "./node_modules/**", "build.ts"]
}
